<div id="<%= dom_id vacation_request %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= vacation_request.user %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= vacation_request.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= vacation_request.end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= vacation_request.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= vacation_request.description %>
  </p>

</div>
