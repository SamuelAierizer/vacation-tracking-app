<%= turbo_frame_tag :main_content do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Departments" %>

    <div class="flex justify-between items-center mb-8">
      <h1 class="font-bold text-4xl">Departments</h1>
      <%= link_to "New department", new_department_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium hover:bg-blue-800 hover:text-white", data: { turbo_action: :replace } %>
    </div>

    <div id="departments" class="grid grid-cols-2 gap-4 min-w-full">
      <% @departments.each do |department| %>
        <%= render department %>
      <% end %>
    </div>
  </div>
<% end %>
