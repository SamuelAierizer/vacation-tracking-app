<div class="rounded-lg dark:border bg-white text-black shadow-lg p-4">
  <% if title? || subtitle? %>
    <div class="flex flex-col space-y-1.5 ">
      <% if title? %>
        <h2 class="text-xl font-bold text-left leading-none tracking-tight"><%= title %></h2>
      <% end %> <% if subtitle? %>
        <p class="text-sm text-muted-foreground"><%= subtitle %></p>
      <% end %>
    </div>
  <% end %>

  <%= body %>

  <% if footer? %>
    <footer class="mx-6 mb-6"><%= footer %></footer>
  <% end %>
</div>
